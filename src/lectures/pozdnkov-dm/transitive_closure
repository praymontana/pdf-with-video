            \draw [fill = black] (5,0) circle(1mm);
            \draw [fill = black] (5,3) circle(1mm);
            \draw [fill = black] (0,3) circle(1mm);
        \end{tikzpicture}
    \end{figure}
    \end{minipage}
    \hfill
    \begin{minipage}[h]{0.15\linewidth}
    \begin{figure}[H]
    \centering
        \begin{tikzpicture}[font = \large, scale = 0.8]
            \draw [dashed]
            (0,3) -- 
            (5,3);
            
            \draw 
            (5,3) -- node[right]{$x_2$}
            (5,0) -- node[]{} cycle;
            
            \draw 
            (0,0) -- node[above]{$x_3$}
            (5,0) -- node[]{} cycle;
            
            \draw [dashed]
            (0,0) -- 
            (0,3);
            
